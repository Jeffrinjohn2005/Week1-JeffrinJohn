// Ask the user for its height, repeats until the user give us what we want, positive int between 1-8 
int askHeight(void) 
{
    //Strore user input
    int height;
    
    bool incorrect_input = true; 
    
    while (incorrect_input)
    {
        // Call funciton that ask for user input
        height = get_int("Height: "); 
        
        if (height > 0 && height < 9) 
        {
            // Set the incorrect_input bool to false
            incorrect_input = false; 
        }
    }
    
    return height; 

}


